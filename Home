        function launchRocket() {
            const rocket = document.getElementById("rocket");
            rocket.style.top = "-500px"; // Laat de raket omhoog vliegen
            setTimeout(() => {
                alert("Je bent klaar om je carrière te lanceren! Kom naar de tweede verdieping en ontdek meer!");
